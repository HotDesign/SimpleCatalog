<legend>Coordenadas Geográficas  
    <div class="scright">
        <a href="{{ path('scgeoext_edit', { 'id': entity.id }) }}?iframe=true&width=800&height=400" rel="prettyPhoto" title="Editar coordenadas" target="_blank">Editar</a>
    </div>
</legend>
{% if entity %}
    {% if not entity.enabled %}
    <div class="alert alert-warning">
        Coordenadas Desactivadas. Edite para Activarlas.
    </div>
    {% endif %}
    <img src="http://maps.google.com/maps/api/staticmap?center={{ entity.lat}},{{ entity.lng}}&zoom=15&size=400x200&sensor=false&markers=size:mid|color:red|label:E|{{ entity.lat}},{{ entity.lng}}" alt="" />
    <div class="scactions">
       
    </div>
{% else %}
    <div class="alert alert-info">
        Aún no se han cargado coordenadas o estan desactivadas.
    </div>
{% endif %}
<ul class="breadcrumb">
    <li>
        <a href="{{ path('products_homepage')}}">Todos</a> 
        <span class="divider">/</span>
    </li>
    
    {% for item in parent_items %}
        <li>
            <a href="{{ path('products_listing', {'slug': item.slug }) }}">{{ item.title }}</a> 
            <span class="divider">/</span>
        </li>
    {% endfor %}

    <li class="active"> <a href="{{ path('products_listing', {'slug': current_category.slug }) }}">{{ current_category.title }}</a></li>
</ul>
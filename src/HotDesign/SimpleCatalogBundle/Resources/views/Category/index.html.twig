{% extends 'SimpleCatalogBundle:Layouts:base.html.twig' %}
{% block title %} Lista de Categorías {% endblock %}

{% block content %}
<h2>{{ block('title') }}</h2>

<table class="table table-striped ">
    <thead>
        <tr>
            <th class="sc_index_table">#</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th class="sc_actions_table">Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.getIndent }}{{ entity.title }}</td>
                <td>{{ entity.description | striptags |truncate(100) }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_show', { 'id': entity.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="sc_actions">
        <a href="{{ path('category_new') }}" class="btn btn-small btn-primary"><i class="icon-plus icon-white"></i> Nueva Categoría</a>
    </div>
{% endblock %}
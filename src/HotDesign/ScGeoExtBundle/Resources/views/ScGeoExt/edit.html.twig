{% extends 'SimpleCatalogBundle:Layouts:baseext.html.twig' %}
{% form_theme edit_form 'SimpleCatalogBundle:Form:fields.html.twig' %}
{% block title %}Posición Geográfica{% endblock %}

{% block content %}

<legend> Editar Posición</legend>
{% include 'SimpleCatalogBundle:Layouts:flashes_messages.html.twig'%}
<form class="form-horizontal sc_form" action="{{ path('scgeoext_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
       
    <div class="control-group ">
            Buscar en el Mapa (ej. San Martin 2040, Santa Fe, Santa Fe, Argentina)
            <input id="address" type="textbox" value="">
            <input type="button" value="Buscar!" onclick="codeAddress()">
        </div>
        <div id="mapitems" style="width: 100%; height: 200px"></div>
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Guardar">
        </div>
    </form>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="{{ asset('bundles/scgeoext/ScGeoExt/location-picker/maps.js') }}" type="text/javascript"></script>

<script type="text/javascript">
if_gmap_init();
</script>

{% endblock %}

